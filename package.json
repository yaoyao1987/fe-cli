{
  "name": "@yaoyao1987/fe-cli",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yaoyao1987/fe-cli.git"
  },
  "version": "1.0.0",
  "main": "index.js",
  "author": "yaoyao1987 <ly.yao@shunwang.com>",
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
		"publish": "lerna publish",
		"version:patch": "lerna version patch",
		"version:major": "lerna version major",
		"version:minor": "lerna version minor"
  },
  "devDependencies": {
    "chalk": "^4.1.1",
    "enquirer": "^2.3.6",
    "execa": "^5.0.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^11.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --parser=typescript --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  }
}
